<%- include header %>
    <div class="left">
        <div class="jumbotron">
            <h2><a href="/p/<%= latest_post._id %>"><%= latest_post.title %></a></h2>
            <p>
                <%= latest_post.intro %><span><a href="/p/<%= latest_post._id %>">阅读全文 » </a></span>
            </p>
            <div class="meta">tags:
                <% latest_post.tags.forEach(function(tag){ %>
                    <a href="/tags/<%= tag %>">
                        <%= tag %>
                    </a>
                    <% }) %>
                        | <%= latest_post.time.getFullYear() %>-<%= latest_post.time.getMonth()+1 %>-<%= latest_post.time.getDate() %>
            </div>
        </div>
        <div class="archive">
            <h2>近期文章
			<a href="/tags">文章归档 » </a>
			</h2>
            <ul>
                <% archive_posts.forEach(function(post){ %>
                    <li>
                        <span><%= latest_post.time.getFullYear() %>-<%= latest_post.time.getMonth()+1 %>-<%= latest_post.time.getDate() %> » </span>
                        <a href="/p/<%= post._id %>">
                            <%= post.title %>
                        </a>
                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>
    <div class="right">
        <div class="tags">
            <h2>文章分类</h2>
            <ul>
                <% tags.forEach(function(tag){ %>
                    <li>
                        <a href="/tags/<%= tag %>">
                            <%= tag %>
                        </a>
                    </li>
                    <% }) %>
            </ul>
        </div>
        <div class="weibo">
            <iframe width="100%" height="420" class="share_self" frameborder="0" scrolling="no" src="http://widget.weibo.com/weiboshow/index.php?language=&width=0&height=420&fansRow=2&ptype=1&speed=0&skin=5&isTitle=0&noborder=1&isWeibo=1&isFans=0&uid=1739214550&verifier=c683dfe7&dpc=1"></iframe>
        </div>
    </div>
    <div class="comment">
        <!-- 多说评论框 start -->
        <div class="ds-thread" data-thread-key="1" data-title="首页" data-url="http://localhost:3000/"></div>
        <!-- 多说评论框 end -->
