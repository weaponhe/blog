<% include header %>
<div class="tag_wrapper">
	<div class="tag_panel">
		<span class="tag_title">Tags:</span>
		<span class="tag_list">
			<% tags.forEach(function(tag,index){ %>
			<a href="/tags/<%= tag %>"><%= tag %></a>
			<% }) %>
		</span>
	</div>
</div>
<div class="archive_list">
	<% var lastYear = 0 %>
	<% posts.forEach(function(post,index){ %>
		<% if(post.time.getFullYear()!=lastYear){ %>
			<% lastYear = post.time.getFullYear() %>
			<h2><%= lastYear %>å¹´</h2>
		<% } %>
		<li><a href="/p/<%= post._id %>"><%= post.title %></a><span>(
		<%= post.time.getFullYear() %>-<%= post.time.getMonth()+1 %>-<%= post.time.getDate() %>
		| tags:
		<% post.tags.forEach(function(tag){ %>
	    <a href="/tags/<%= tag %>">
	        <%= tag %>
	    </a>
    <% }) %>
		) 
		</span></li>

	<% }) %>
</div>
<% include footer %>